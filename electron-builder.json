{
  "directories": {
    "output": "release/"
  },
  "publish": {
    "provider": "github",
    "owner": "yegobox",
    "repo": "flipper",
    "vPrefixedTagName": true
  },
  "files": [
    "**/*",
    "!*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!.angular-cli.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "asar": true,
    "verifyUpdateCodeSignature":false,
    "requestedExecutionLevel": "highestAvailable",
    "icon": "dist/assets/icon/win/icon.ico",
    "legalTrademarks": "(c) 2020 yegobox",
    "publisherName": "yegobox",
    "target": [
      "nsis-web"
    ]
  },
  "nsis-web": {
    "oneClick": false,
    "allowElevation": true,
    "differentialPackage": true,
    "createStartMenuShortcut":true,
    "license": "dist/assets/eula.txt",
    "include":"dist/assets/installer.nsh",
    "perMachine": true,
    "allowToChangeInstallationDirectory": false
  },
  "mac": {
    "icon": "dist/assets/icon/mac/icon.icns",
    "target": [
      "zip",
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icon/linux/icon.png",
    "target": [
      "AppImage",
      "deb",
      "tar.xz"
    ]
  }
}